{
  "compilerOptions": {
    "strict": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["src/api/*"],
      "@models/*": ["src/models/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "index.js",
    "App.js",
    "app",
    "test",
    "*.js",
    "*.jsx",
    "*.ts",
    "*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
